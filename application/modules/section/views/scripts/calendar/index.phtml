		function getAllHoliday(month){
			holidayList='';
			$("#holidayList").empty();
			if(month==0){
				return false;
			}
			
			var url = '<?php echo $this->url(array('module'=>'section','controller'=>'calendar','action'=>'getholiday'));?>';
		    	$.ajax({
					url:url,
					type: "post",
					data: {
						'url':'getholiday',
						'mothHoliday':month,
						'currentLang':'1',
					},
					dataType: "json",
					success: function(data){
						for(i=0;i<data.length;i++){
					    		holidayList+='<li class="collection-item avatar">';
					    		holidayList+='<div class="item-det"><span class="title">'+data[i].holiday_name+'</span></div>';
					    		holidayList+='<div class="secondary-content"><h6 class="top-0">'+data[i].holiday_day+'<br />'+data[i].holiday_string+'</h6></div>';
					    		holidayList+='</div></li>';

					    		/*<li class="collection-item avatar">
					              <div class="item-det">
